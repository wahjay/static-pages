<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-8">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <div style="test-align:center"><%= @user.name %></div>
      </h1>
    </section>
    <!-- rendering users' relationship stats -->
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
    <!-- display microposts class="col-md-8" -->
    <div class="col-md-8">
      <%= render 'follow_form' if logged_in? %>
      <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
    </div>
</div>

<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Blog", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home", root_path, {:style => 'font-size:18px'} %></li>
            <li><%= link_to "Help", help_path, {:style => 'font-size:18px'} %></li>
            <% if logged_in? %>
              <li><%= link_to "Users", users_path, {:style => 'font-size:18px'} %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="font-size:18px">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user, {:style => 'font-size:16px' } %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user), {:style => 'font-size:16px' } %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Log out", logout_path, method: :delete %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Log in", login_path, {:style => 'font-size:18px'} %></li>
            <% end %>
          </ul>
        </nav>
      </div>
  </header>
